<div class="container">

  <h1>NomNom Burger</h1>
  <h2>Eat ME!</h2>

  <div class="col-md-6 text-center" class="buildBurger">
    <ul>
      {{#each data}}
        {{#unless this.devoured}}
          <div class="col-md-9 text-center">
            <pre>{{this.condition}}. {{this.burger_name}}
            </pre>
                <!-- {{this.Date}} -->
          </div>
          <div class="col-md-3 text-center">
            <form class="eatMe button-size">
              <input input type="hidden" class="burger_id" type="text" value={{this.condition}}><br>
              <button type="submit" class="btn btn-default">Devour it!</button>
            </form>
          </div>
        {{/unless}}
      {{/each}}
    </ul>
    <div class="col-md-6 text-center" class="buildBurger">
          {{#each data}}
            {{#if this.devoured}}
              <input class="form-control" type="text" placeholder="{{this.condition}} . {{this.burger_name}}" readonly>
          {{/if}}
          {{/each}}
      </div>
  </div>
</div>

<div class="container">
  <div class="col-md-12 text center enter_selection">
    <form action="/api/createburger" method="POST">
      <input type="text" class="form-control" id="enter_text" name="burger_name" value="">
      <button type="submit" class="btn-primary">Submit</button>
    </form>
  </div>
</div>